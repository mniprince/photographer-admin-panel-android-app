<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    tools:context=".course.AllCourseActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn From Exparts"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/_20sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/basic"
            android:background="@color/mushaf2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/basic"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/bchk"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="-30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/foundation"
            android:background="@color/mushaf2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/foundationcourse"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/fchk"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="-30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/profesional"
            android:background="@color/mushaf2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:src="@drawable/professional"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/pchk"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="-30dp"/>

    </LinearLayout>


<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/paybtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bgbtn"
    android:text="Pay Now"/>


</LinearLayout>