<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="@dimen/_5sdp"
tools:context=".photopurches.PhotoBuyActivity">
<ImageView
    android:id="@+id/pimage"
    android:background="@color/teal_200"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginStart="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_1sdp"
    android:padding="@dimen/_2sdp"
    android:scaleType="fitXY"/>

<LinearLayout
    android:id="@+id/l1"
    android:layout_below="@+id/pimage"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_18sdp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_15sdp"
    android:orientation="horizontal">
    <TextView

        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : "/>

    <TextView
        android:id="@+id/pricetv"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

<LinearLayout
    android:id="@+id/l2"
    android:layout_below="@+id/l1"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_18sdp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/_15sdp"
    android:orientation="horizontal">
    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Size: "/>

    <TextView
        android:id="@+id/dutext"
        android:text="5472 X 3648 px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/pl"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_above="@+id/ppaybtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/card"
                    android:background="@color/mushaf2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/card"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/cchk"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="-30dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rocket"
                    android:background="@color/mushaf2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rocket"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/rchk"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="-30dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/bkash"
                    android:background="@color/mushaf2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bkash"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/bkchk"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginStart="-30dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

<Button
    android:id="@+id/ppaybtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/_45sdp"
    android:background="@drawable/pbtn"
    android:layout_gravity="center_horizontal"
    android:text="Purchase"/>

</RelativeLayout>